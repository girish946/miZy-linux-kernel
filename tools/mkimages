#!/bin/sh

## hyphop ##

usage() { echo "

USAGE $0

    mkimages /tmp Image gzip [../bin/uImage.gzip]

"
exit
}

wdir=$1
i=$2
c=$3

[ "$i" = "" ] && i="Image"
ii=$wdir/$i.$c

[ -f $ii ] || usage

size=`stat --printf %s $ii`

#sizeh=`printf %08x $size`

[ "$out" = "" ] && out="$wdir/u$i.$c"


## header 

tmp=/tmp

wd=`dirname $0`
pwd=$PWD
oi="$wd/u$i.$c.hdr"
ou="$tmp/u$i.$c"
oh="$ou.hdr"

[ "$4" = "" ] || ou=$4

echo "$0 for $ii =>
    $pwd/$ou, set $i size $size"

#echo "$oi => $oh"
cp $oi $oh

ddr="dd seek=3 bs=4 count=1 conv=notrunc of=$oh"
#ddr="hd"

#[ "" ] && {
which perl 1>/dev/null && {
    perl -e 'syswrite STDOUT, pack N => '$size | $ddr 2>/dev/null
    echo "$ii => $ou"
    cat $oh $ii > $ou
    which file 1>/dev/null && file $ou
    exit 0
}
#}

which xxd 1>/dev/null && {
    printf "0: %.8x" $size | xxd -r -g0 | $ddr 2>/dev/null
    echo "$ii => $ou"
    cat $oh $ii > $ou
    which file 1>/dev/null && file $ou
    exit 0
}

echo "[e] try install mkimage u-boot-tools" 1>&2

exit 1
